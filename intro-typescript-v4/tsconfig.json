{
    "include": ["src"], // source files
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "dist",
        "target": "es2020",
        "moduleResolution": "Node",
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true
    }
}